<!DOCTYPE html>
<html>
  <head>
    <title>JobPosting</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if current_page?(company_jobs_path) %>
      <%= render 'shared/emplay' %>
    <% else %>
     <%= render 'shared/header' %>
    <% end %>
    <div class="container">
      <%= render 'shared/flash' %>
      <div class="row">
        <div class="col-lg-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
